cabal-version:   3.0
name:            tasty-golden-executable
version:         0.1.0.0
license:
license-file:    LICENSE
author:          Wen Kokke
maintainer:      wenkokke@users.noreply.github.com
copyright:       Â© Wen Kokke
category:        Testing
build-type:      Simple
extra-doc-files: CHANGELOG.md

common common-language
  default-language:   Haskell2010
  default-extensions:
    FlexibleContexts
    GADTs
    ImportQualifiedPost
    InstanceSigs
    LambdaCase
    OverloadedStrings
    RankNTypes
    RecordWildCards
    TypeApplications

  ghc-options:        -Werror -Wall

library
  import:          common-language
  hs-source-dirs:  src
  exposed-modules: Test.Tasty.Golden.Executable
  other-modules:
    General.Extra
    General.Extra.Aeson
    General.Extra.File
    General.Extra.Option
    Test.Tasty.Golden.Executable.TestSpec
    Test.Tasty.Golden.Executable.TestSpec.External
    Test.Tasty.Golden.Executable.TestSpec.FilePattern
    Test.Tasty.Golden.Executable.TestSpec.Ignore
    Test.Tasty.Golden.Executable.TestSpecs

  build-depends:
    , aeson                 >=2.1.1   && <2.2
    , aeson-pretty          >=0.8.9   && <0.9
    , array                 >=0.5.4   && <0.6
    , base                  >=4.13    && <5
    , bytestring            >=0.10.12 && <0.12
    , containers            >=0.5     && <1
    , Diff                  >=0.4.1   && <0.5
    , directory             >=1.3.6   && <1.4
    , dlist                 >=1.0     && <1.1
    , filepath              >=1.4     && <2
    , Glob                  >=0.10.2  && <0.11
    , hashable              >=1.3     && <2
    , mtl                   >=2.2     && <3
    , optparse-applicative  >=0.16    && <1
    , process               >=1.2     && <2
    , regex-tdfa            >=1.3.2   && <1.4
    , tagged                >=0.8.7   && <0.9
    , tasty                 >=1.4.3   && <1.5
    , tasty-golden          >=2.3.5   && <2.4
    , temporary             >=1.3     && <1.4
    , text                  >=1.2     && <3
    , unordered-containers  >=0.2.19  && <0.3
