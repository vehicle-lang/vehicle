-- Test suites --
-----------------

library vehicle-golden-tests-common
  import:          common-library
  hs-source-dirs:  tests/golden
  exposed-modules:
    Vehicle.Test.Golden
    Vehicle.Test.Golden.TestSpec
    Vehicle.Test.Golden.TestSpec.NewTestSpec

  other-modules:   Vehicle.Test.Golden.Extra
  build-depends:
    , aeson                 >=2.1.1  && <2.2
    , aeson-pretty
    , array
    , base                  >=4.13   && <5
    , bytestring
    , containers
    , Diff                  >=0.4.1  && <0.5
    , directory             >=1.3.6  && <1.4
    , dlist
    , filepath              >=1.4    && <2
    , Glob                  >=0.10.2 && <0.11
    , hashable
    , mtl
    , optparse-applicative
    , process               >=1.2    && <2
    , regex-tdfa
    , tagged
    , tasty
    , tasty-golden
    , temporary
    , text                  >=1.2    && <3
    , unordered-containers  >=0.2.19 && <0.3
    , vehicle

test-suite vehicle-compiler-tests
  import:             common-test
  type:               exitcode-stdio-1.0
  main-is:            tests/golden/CompilerTests.hs
  build-depends:
    , base                                 >=4.13 && <5
    , filepath
    , tasty
    , vehicle:vehicle-golden-tests-common

  build-tool-depends: vehicle:vehicle

test-suite vehicle-integration-tests
  import:             common-test
  type:               exitcode-stdio-1.0
  main-is:            tests/golden/IntegrationTests.hs
  build-depends:
    , base                                 >=4.13 && <5
    , filepath
    , tasty
    , vehicle:vehicle-golden-tests-common

  build-tool-depends: vehicle:vehicle

executable vehicle-new-golden-test
  import:        common-executable
  main-is:       tests/golden/NewTest.hs
  build-depends:
    , base                                 >=4.13 && <5
    , vehicle:vehicle-golden-tests-common

library vehicle-unit-tests-common
  import:          common-library
  hs-source-dirs:  tests/unit
  exposed-modules:
    Vehicle.Test.Unit.Common
    Vehicle.Test.Unit.Compile.CommandLine
    Vehicle.Test.Unit.Compile.DeBruijn
    Vehicle.Test.Unit.Compile.Normalisation

  build-depends:
    , base                  >=4.13 && <5
    , containers
    , hashable
    , mtl
    , optparse-applicative
    , tagged
    , tasty
    , tasty-hunit
    , text
    , vehicle
    , vehicle-syntax

test-suite vehicle-unit-tests
  import:        common-test
  type:          exitcode-stdio-1.0
  main-is:       tests/unit/Tests.hs
  build-depends:
    , base                               >=4.13 && <5
    , tasty
    , vehicle:vehicle-unit-tests-common
