  autogen-modules: Paths_vehicle
  build-depends:
    , aeson                  >=2.1.1    && <2.2
    , aeson-pretty           >=0.8.9    && <0.9
    , ansi-terminal          >=0.6      && <1
    , base                   >=4.13     && <5
    , bytestring             >=0.10.12  && <0.12
    , cereal                 >=0.5      && <1
    , containers             >=0.5      && <1
    , data-default           >=0.7      && <1
    , data-default-class     >=0.1.2    && <0.2
    , data-fix               >=0.2      && <1
    , deepseq                >=1.4      && <2
    , directory              >=1.3.6    && <1.4
    , file-embed             >=0.0.15.0 && <0.1
    , filepath               >=1.4      && <2
    , gitrev                 >=1.3      && <2
    , hashable               >=1.3      && <2
    , linkedhashmap          >=0.4      && <1
    , mnist-idx              >=0.1.3.1  && <0.2
    , mtl                    >=2.2      && <3
    , optparse-applicative   >=0.16     && <1
    , prettyprinter          >=1.7      && <2
    , process                >=1.6.13   && <1.7
    , split                  >=0.2.3    && <0.3
    , temporary              >=1.3      && <1.4
    , terminal-progress-bar  >=0.4.1    && <1
    , text                   >=1.2      && <3
    , transformers           >=0.4      && <0.7
    , unordered-containers   >=0.2.19   && <0.3
    , vector                 >=0.12.3   && <0.14
    , vehicle-syntax

executable vehicle
  import:         common-library
  main-is:        Main.hs
  hs-source-dirs: app
  build-depends:
    , base                  >=4.13 && <5
    , optparse-applicative  >=0.16 && <1
    , vehicle

